                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().OrderDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().requiredDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().shippedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().shipName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().shipAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().shipCity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().shipRegion)
