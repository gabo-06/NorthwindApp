@using PagedList;
@using PagedList.Mvc;
@model IPagedList<WebApplication3.Models.OrderP>

@section EstiloPaginacion
{
    <link href="~/Content/PagedList.css" rel="stylesheet" />
}

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<br />
